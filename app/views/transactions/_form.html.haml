= form_for @transaction do |f|
  -if @transaction.errors.any?
    #error_explanation
      %h2= "#{pluralize(@transaction.errors.count, "error")} prohibited this transaction from being saved:"
      %ul
        - @transaction.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :date
    = f.datetime_select :date
  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :confirmed
    = f.check_box :confirmed
  .field
    = f.label :from
    = f.number_field :from
  .field
    = f.label :to
    = f.number_field :to
  .actions
    = f.submit 'Save'
